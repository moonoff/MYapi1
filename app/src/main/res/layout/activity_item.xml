<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xaut.example.myapi.webs.ItemActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="10dp">

        <ImageView
            android:id="@+id/activity_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ima"/>
        <TextView
            android:id="@+id/activity_item_text1_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="名称"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary">
        </View>

        <TextView
            android:id="@+id/activity_item_text2_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="价格"
            android:textSize="20dp"
            android:background="@color/colorchanges"/>

        <TextView
            android:id="@+id/activity_item_text3_sales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="销售"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark">
        </View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买流程>"/>
            <Button
                android:id="@+id/activity_item_but1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击领券>>"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/activity_item_but2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="点击下单>>>"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lucky_p"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lucky_pp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lucky_ppp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lucky_pppp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lucky_ppppp"/>
    </LinearLayout>
</ScrollView>
